{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "scripthost"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "paths": {
      "common": ["../common/src"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
    // https://typestrong.org/ts-node/docs/paths#why-is-this-not-built-in-to-ts-node
    "require": ["tsconfig-paths/register"]
  }
}
