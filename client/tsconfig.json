{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "scripthost"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*",
    "../common/src/entities/entityType.ts",
    "../common/src/entities/componentType.ts",
    "../node_modules/phaser3-rex-plugins-types"
  ],
  "references": [
    {
      "path": "../common/tsconfig.json"
    }
  ]
}
